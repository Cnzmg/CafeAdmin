
doctype html
html(lang="en")
  meta(charset="UTF-8")
  meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0")
  meta(http-equiv="X-UA-Compatible" content="ie=edge") 
  meta(http-equiv="Pragma" content="no-cache")
  meta(http-equiv="Cache-control" content="no-cache") 
  meta(http-equiv="Cache" content="no-cache") 
  head
    title 咖速修
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vant@2.8/lib/index.css")
  body
    .module 
      .router 努力加载中...
    .container
        .free_view_circular
            .free_circular
    #app
      van-swipe(class="my-swipe" :autoplay="3000" indicator-color="white" :show-indicators=false)
          van-swipe-item
              img(:src="image")
          van-swipe-item
              img(:src="image")
      van-action-sheet(:actions="actions" @select="onSelect" v-model="show" cancel-text="取消")
      van-tabbar(v-model="active" @change="ourHref")
          van-tabbar-item(icon="home-o") 首页
          van-tabbar-item(icon="todo-list-o") 我的订单
      .machine
        ul
          li(v-for="(item, index) in machineList" :key="item" @click="changMachine(item)")
            img(:src="item.machinePic", alt="")
            div
              span {{ item.machineName }}
              span {{ item.machineContent }}
            img(src="../images/right.png", alt="")
    